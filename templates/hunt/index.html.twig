{% extends 'base.html.twig' %}

{% block title %}Recherche France Travail{% endblock %}

{% block body %}
<style>
    .hunt-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }
    
    /* --- STYLE DU FORMULAIRE --- */
    .search-box {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        margin-bottom: 3rem;
        border: 1px solid #e2e8f0;
    }
    .search-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    .form-row {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        align-items: flex-end; /* Aligne le bouton avec les champs */
    }
    .form-group {
        flex: 1;
        min-width: 250px;
    }
    .form-label {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.5rem;
    }
    /* Les classes .form-input et .btn-search sont inject√©es via le PHP (SearchJobType)
       mais on peut les styliser ici si besoin de surcharge */
    .form-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
    }
    .btn-search {
        background: #0f172a;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: background 0.2s;
        height: 48px; /* Pour matcher la hauteur des inputs */
    }
    .btn-search:hover {
        background: #334155;
    }

    /* --- STYLE DES R√âSULTATS --- */
    .results-count {
        margin-bottom: 1rem;
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 500;
    }
    
    .job-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .job-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }
    
    .job-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }
    .job-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
    }
    .company-name {
        font-weight: 600;
        color: #4f46e5;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }
    
    /* Badges (Lieu, Contrat, Salaire) */
    .tags {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }
    .tag {
        background: #f1f5f9;
        color: #475569;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .job-desc {
        color: #334155;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .btn-link {
        display: inline-flex;
        align-items: center;
        color: #2563eb;
        font-weight: 600;
        text-decoration: none;
    }
    .btn-link:hover { text-decoration: underline; }
</style>

<div class="hunt-container">

    <div class="search-box">
        <h2 class="search-title">üîé Explorateur France Travail</h2>
        
        {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.keyword, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.keyword) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.location) }}
                </div>
                <div>
                    {{ form_widget(form.rechercher) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>

    <div style="text-align: right; margin-bottom: 1rem;">
        <a href="{{ path('app_my_jobs') }}" style="text-decoration: none; color: #4f46e5; font-weight: 600; background: #eef2ff; padding: 8px 16px; border-radius: 99px;">
            üìÇ Voir mes candidatures sauvegard√©es
        </a>
    </div>

    <div class="results-count">
        {% if jobs is not empty %}
            {{ jobs|length }} offres trouv√©es
        {% endif %}
    </div>

    {% if jobs is empty %}
        <div style="text-align: center; padding: 4rem; color: #94a3b8; background: white; border-radius: 12px; border: 1px dashed #cbd5e1;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">ü§∑‚Äç‚ôÇÔ∏è</div>
            <h3>Aucune offre trouv√©e</h3>
            <p>Essaie de changer de mot-cl√© ou de d√©partement (ex: 75, 33, 69...)</p>
        </div>
    {% else %}
        {% for job in jobs %}
            <div class="job-card">
                <div class="job-header">
                    <div class="job-title">{{ job.intitule }}</div>
                    <div style="font-size: 0.85rem; color: #94a3b8;">
                        {{ job.dateCreation | date('d/m/Y') }}
                    </div>
                </div>

                <div class="company-name">
                    üè¢ {{ job.entreprise.nom ?? 'Entreprise Confidentielle' }}
                </div>

                <div class="tags">
                    <span class="tag">üìç {{ job.lieuTravail.libelle }}</span>
                    <span class="tag">üìú {{ job.typeContrat }}</span>
                    {% if job.salaire.libelle is defined %}
                        <span class="tag">üí∞ {{ job.salaire.libelle }}</span>
                    {% endif %}
                </div>
                
                <p class="job-desc">
                    {{ job.description | length > 300 ? job.description|slice(0, 300) ~ '...' : job.description }}
                </p>

                {# Construction intelligente du lien #}
                {# 1. On cherche le lien partenaire ou le lien pour postuler #}
                {% set jobLink = job.origineOffre.urlOrigine ?? job.contact.urlPostulation ?? null %}

                {# 2. Si on n'a rien trouv√©, on tente le lien France Travail #}
                {% if jobLink is null %}
                    {# On v√©rifie si c'est un "vrai" ID France Travail (g√©n√©ralement 7 chiffres + 1 lettre, donc <= 8 caract√®res) #}
                    {% if job.id|length <= 8 %}
                        {% set jobLink = 'https://candidat.francetravail.fr/offres/recherche/detail/' ~ job.id %}
                    {% else %}
                        {# Cas d√©sesp√©r√© : C'est une offre partenaire sans lien. On renvoie vers la recherche g√©n√©rale #}
                        {% set jobLink = 'https://candidat.francetravail.fr/offres/recherche' %}
                    {% endif %}
                {% endif %}
                <a href="{{ path('app_job_show', {id: job.id}) }}" class="btn-link" style="margin-right: 15px; color: #1e293b;">
                    üëÅÔ∏è Voir les d√©tails
                </a>
                <a href="{{ jobLink }}" target="_blank" class="btn-link">
                    Voir l'offre sur France Travail &rarr;
                </a>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}